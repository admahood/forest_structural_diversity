  geom_point() +
  xlab("External heterogeneity") + 
  ylab("Invasive plant species richness") + 
  labs(color='Forest Type') + 
  stat_smooth(method = "lm",
              formula = y ~ x,
              geom = "smooth")

ggplot(strdiv, aes(x=sd.sd.aop, y=exotic_richness, color = new_class)) + 
  geom_point()+
  xlab("Internal heterogeneity") + 
  ylab("Invasive plant species richness") + 
  labs(color='Forest Type') 


